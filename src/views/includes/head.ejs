<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<!-- bootstrap 5 -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
			crossorigin="anonymous"
		/>

		<!-- less -->
		<link rel="stylesheet/less" type="text/css" href="./less/styles.less" />
		<script src="//cdn.jsdelivr.net/npm/less@3.13"></script>
		<link rel="preconnect" href="https://fonts.gstatic.com" />

		<!-- google fonts -->
		<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap" rel="stylesheet" />

		<!-- fontawesome icons -->
		<script src="https://kit.fontawesome.com/dea2b45bdd.js" crossorigin="anonymous"></script>

		<!-- favicon -->
		<link rel="shortcut icon" href="https://www.hackerhero.com/favicon.ico" type="image/x-icon" />

		<!-- Jquery -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

		<title>Hacker Hero Live Poll</title>
	</head>
	<script>
		$(document).ready(function () {
			$("textarea").focus();

			$(".btn-add-option").click(function () {
				let html = ``;
				html += `<li>`;
				html += `	<div class="col-9 d-inline-block">`;
				html += `		<input type="text" name="choice[]" class="form-control" placeholder="Add Option">`;
				html += `	</div>`;
				html += `	<div class="col-2 d-inline-block align-top">`;
				html += ` 		<button type="button" class=" btn btn-danger delete-option ms-2">X</button>`;
				html += `	</div>`;
				html += `</li>`;

				$(".option-list").append(html);
			});

			$(document).on("click", ".delete-option", function () {
				console.log($(this).parent().parent());
				$(this).parent().parent().remove();
			});
		});
	</script>
</html>
